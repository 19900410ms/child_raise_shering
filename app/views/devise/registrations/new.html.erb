<div class="sign">
 <div class="sign__in">プロフィール登録</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :指名 %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :都道府県・市町村 %><br />
      <%= f.text_field :region, autofocus: true, autocomplete: "region" %>
    </div>

    <div class="field">
      <%= f.label :建物名・番地 %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :年齢 %><br />
      <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
    </div>

    <div class="field">
      <%= f.label :性別 %><br />
      <%= f.text_field :gender, autofocus: true, autocomplete: "gender" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード確認入力 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: "actions__btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>