<%= render partial: "layouts/header", locals: {user: @user } %>

<div class="make-room">
  <div class="make-confirm">
    <h1 class="make-confirm__title">チャットルーム作成画面</h1>
    <div class="make-confirm__description">
      <h1 class="make-confirm__description__div">指名</h1>
      <h1 class="make-confirm__description__info"><%= @request.user.name %></h1>
    </div>
    <div class="make-confirm__description">
      <h1 class="make-confirm__description__div">住所</h1>
      <h1 class="make-confirm__description__info">
        <%= @request.user.prefecture.name %>
        <%= @request.user.city %>
        <%= @request.user.building_street %>
      </h1>
    </div>
    <div class="make-confirm__description">
      <h1 class="make-confirm__description__div">メールアドレス</h1>
      <h1 class="make-confirm__description__info"><%= @request.user.email %></h1>
    </div>
  </div>

  <div class="create-room">
    <p class="create-room__message">チャットを開始する場合は<br>下記のボタンをクリック</p>
    <%= form_for ([@request, @room]) do |f| %>
      <%= f.submit "チャットルームを作成する", id: :"new-room__btn" %>
    <% end %>
  </div>
</div>