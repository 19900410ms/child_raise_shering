<div class="reply">
  <div class="reply__title">
    返信画面
  </div>
  <div class="reply__request">
    <div class="reply__request__left">
      <li>依頼日程：<%= @request.date %></li>
      <li>依頼時間：<%= @request.time %></li>
      <li>依頼主：<%= @request.user.name %></li>
      <li>メールアドレス：<%= @request.user.email %></li>
      <li>住所：<%= @request.user.region %><%= @request.user.address %></li>
    </div>
    <div class="reply__request__right">
      <li>お子様の指名：<%= @request.name %></li>
      <li>年齢：<%= @request.age %></li>
      <li>性別：<%= @request.gender %></li>
      <li>アレルギー：<%= @request.allergy %></li>
      <li>性格：<%= @request.personality %></li>
      <li>特記事項：<%= @request.mention %></li>
    </div>
  </div>
  <%= form_for @request do |form |%>
  <%= form.select :reply, ["選択してください","承諾", "辞退"] %>
  <%= form.submit "返信" %>
  <% end %>
</div>