<%= render partial: "layouts/header", locals: {user: @user} %>

<div class="search">
  <%= form_with(scope: :search, url: search_accepts_path, method: :get, local: true, class: :"search__form") do |form| %>
    <%= form.fields_for :users do |f| %>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '都道府県を選択' %>
      <%= f.submit "検索", class: :"search__form__btn" %>
    <% end %>
  <% end %>
  
  <%= render partial: "accept_list", locals: {accept: @accept} %>
</div>